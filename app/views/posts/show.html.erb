<%= render :partial => @blog %>

<p id="notice"><%= notice %></p>

<div class="wrapper">

<div class="left panel">
  <%= render :partial => @post %>

  <div class="container">
    <%= link_to 'Editar', edit_post_path(@post) %> |
    <%= link_to 'Apagar', @post, :data => {:confirm => 'Tem certeza?'}, method: :delete %> |
    <%= link_to 'Voltar', posts_path %>
  </div>

<h2>Comentários</h2>
<div id="comments">
  <%= render :partial => @post.comments %>
</div>

<div class="container">

<%= form_for [@post, Comment.new] do |f| %>
  <div class="field">
    <%= f.label "Nome" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Conteúdo" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Postar" %>
  </div>
<% end %>

</div>

</div>

<div class="right panel">
  <%= render "sidebar" %>
</div>

<span class="clear"></span>

</div>

<%= render "footer" %>
