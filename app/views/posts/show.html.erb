<%= render :partial => @blog %>

<p id="notice"><%= notice %></p>

<%= render :partial => @post %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comentarios</h2>
<div id="comments">
  <%= render :partial => @post.comments %>
</div>

<%= form_for [@post, Comment.new] do |f| %>
  <p>
    <%= f.label :body, "Novo comentario" %><br/>
    <%= f.text_field :name %>
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit "Postar" %></p>
<% end %>
